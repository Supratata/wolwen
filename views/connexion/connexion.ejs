<!DOCTYPE html>
<html lang="fr" ng-app="App">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Connexion - AshdownX</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="css/font-awesome.min.css">

    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Material Design Bootstrap -->
    <link href="css/mdb.min.css" rel="stylesheet">


    <link href="css/connexion.css" rel="stylesheet">

    <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
    <!--[if lt IE 9]><script src="../../assets/js/ie8-responsive-file-warning.js"></script><![endif]-->
    <script src="javascripts/lib/ie-emulation-modes-warning.js"></script>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script type="text/javascript" src="javascripts/lib/angular.min.js"></script>

    <script type="text/javascript" src="js/angular-cookies.min.js"></script>
    <script type="text/javascript" src="javascripts/controllers/connexion.js"></script>
</head>
<body ng-controller="MainCtrl" ng-cloak>
<main>
    <div >
        <div class="col-lg-10 col-md-10 logo">
            <img src="/images/fond.png" style="display:block;margin:auto;">
        </div>
        <div class="col-lg-2 col-md-2 connexion">
            <div class="title">
                <p class="white-text text-xs-center">Connexion</p>
            </div>
            <div class="ligne-bas"></div>

            <div ng-show="state" class=" state card card-danger text-xs-center ">
                <div class="card-block">
                    <p class="white-text">Echec d'authentification</p>
                </div>
            </div>
            <div class="image">
                <img ng-src="{{photo}}" class="img-circle" alt="">
            </div>
            <div style="margin-bottom: 20px; text-align: center" ng-show="niveau">
                {{nom}}  {{prenom}}
            </div>
            <form>
                <div ng-show="niveau" class="md-form champ">
                    <input type="password"  ng-model="input" placeholder="  {{place}} " class="form-control">
                </div>
                <div ng-hide="niveau" class="md-form champ">
                    <input type="text"  ng-model="input" placeholder="  {{place}} " class="form-control">
                </div>
                <div ng-show="niveau" style="padding-left:20%">
                    <label>
                        <input type="checkbox"  ng-model="remember"> Se souvenir de moi
                    </label>
                </div>
                <div class="text-xs-center div-connexion">
                    <button  class="btn-connexion btn-flat waves-effect white-text" ng-click="connexion()" type="submit">Connexion</button>
                </div>
            </form>
        </div>
    </div>
</main>
<footer class="col-lg-10 col-md-10 footer white-text">
    Powered by AshdownX for AAG
</footer>
